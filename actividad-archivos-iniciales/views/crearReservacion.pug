extends layout 

block content
    a(href='/') Home
    br
    h1 Nueva reservación
    form(action='/reserva/create' method='POST')
        table.table 
            tr 
                td
                    label(for='code') Código bicicleta:
                td
                    input#code(type='number' name='code')
            tr 
                td
