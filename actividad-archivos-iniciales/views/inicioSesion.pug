extends layout

block content
    a(href='/usuarios') Regresar
    br
    h1 Login 
    form(action='/login' method='POST')
        table.table 
            tr
                td
                    label(for='username') Correo electrónico: 
                td
                    input#username(type='email' name='username' )
            tr
                td
                    label(for='password') Contraseña: 
                td
                    input#password(type='password' name='password')
            tr
                td 
                td
                    input.btn(type='submit' value='Iniciar sesión')

    pre #{info != undefined ? info.message : null}
    pre #{information != undefined ? information : null}         
